/* pages/event/event.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #DFDFDF;
  align-items: flex-start;
  width: 100%;
  height: 1200rpx;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #FFF;
  align-items: flex-start;
  width: 100%;
  height: 50rpx;
  position: relative;
  top: -200rpx;
  padding: 20rpx;
}

#page-title {
  font-size: 40rpx;
  font-weight: 900;
}

#search {
  position: relative;
  font-size: 40rpx;
  font-weight: 900;
  right: 50rpx;
}

.navbar {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  height: 80rpx;
  position: relative;
  top: -200rpx;
  background-color: #FFF
}

.navbar-item {
  padding: 20rpx;
  color: gray;

}

#navbar-underline{
  background-color: #0000CD;
  height: 4rpx;
  width: 55rpx;
  position: relative;
  top: -200rpx;
  left: 20rpx;
}

.navbar-selected {
  font-weight: 500;
  color: black;
}

swiper {
  background-color: #8888DF;
  height: 1000rpx;
  width: 100%; 
  position: relative;
  top: -196rpx;
}

swiper-item {
  background-color: #DFDFDF;
  height: 800rpx;
  width: 100%; 
}

.top-event {
  background-color: #AAAFFF;
  height: 300rpx;
  width: 100%;
}